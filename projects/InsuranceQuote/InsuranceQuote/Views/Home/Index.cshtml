@using InsuranceQuote.Models
@model List<Driver>


<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 m-sm-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0"> Enter Driver Information for Quote</h5>
        </div>
        <div class="card-body">

            @*Get Driver data and post to Driver database in HomeController*@

            @using (Html.BeginForm("InsQuote", "Home", FormMethod.Post))
            {
                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        <input name="DOB" type="text" class="form-control" placeholder="Date of Birth, YYYY-MM-DD" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        <input name="Email" type="email" class="form-control" placeholder="Email Address" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        <h5>Have you ever been issued a DUI?</h5>
                        <input name="DUI" type="text" class="form-control" placeholder="Yes or No" />

                        @*Wanted to make this field a radio button so user input was controlled but
                    didn't work with Entity Framework I think.  Submit button did nothing with this button in the form,
                    HomeController/Driver was never called.*@

                        @*<form>
                        <input type="radio" name="DUI" value="Yes">Yes<br />
                        <input type="radio" name="DUI" value="No">No
                    </form>*@
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        <input name="SpeedTickets" type="number" class="form-control" placeholder="Enter number of speeding tickets, if any." />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        <input name="CarYear" type="text" class="form-control" placeholder="Car Year, YYYY" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                    </div>
                </div>
                <div class="row mb-3">

                    @*Wanted this button to be a radio button to control input but so far radio buttons haven't worked with
                Entity Framework of the Html.BeginForm method.*@
                    <div class="form-group col-md-12">
                        <input name="CvgType" type="text" class="form-control" placeholder="Full Coverage or Liability" />
                    </div>
                </div>
               
                <div class="row no-gutters">
                    <button type="submit" class="btn btn-primary btn-block"> Submit </button>
                </div>
            }
        </div>
     </div>
 </div>



