@using InsuranceQuote.ViewModels
@model QuoteDataVm

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 m-sm-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0"> Car Insurance Quote </h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="form-group col-md-12">
                    Thank you <strong>  @Model.FirstName  @Model.LastName </strong> for your interest in Cars R Us Insurance.  <br/> Your monthly payment for the vehicle you requested has been calculated.
                </div>

                <div class="row mb-3">
                    <div class="form-group col-md-12">
                        Car Year:    @Model.CarYear
                    </div>
                    <div class="form-group col-md-12">
                        Car Make:    @Model.CarMake
                    </div>
                    <div class="form-group col-md-12">
                        Car Model:  @Model.CarModel
                    </div>
                </div>

                <div class="row mx_auto">
                    <div class="form-group col-md-12">
                        Your Monthly Payment would be:  $@Model.Quote
                    </div>
                </div>

            </div>
        </div>
</div>